<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/back1">


    <EditText

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:id="@+id/editbook"

        android:textAlignment="center"

        android:inputType="text"
        android:hint="Title Here"
        android:layout_above="@+id/editdialogue"
        android:layout_alignParentStart="true" />

    <EditText

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:id="@+id/editdialogue"

        android:textAlignment="center"

        android:inputType="text"
        android:hint="Dialogue"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/cancel_button"
        android:layout_alignParentStart="true" />

    <Button

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="@string/cancel_edit"

        android:id="@+id/cancel_button"

        android:layout_gravity="center_horizontal"

        android:textAlignment="center"

        android:background="#00ffffff"
        android:layout_alignTop="@+id/edit_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="66dp" />

    <Button

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="@string/edit"

        android:id="@+id/edit_title"

        android:background="#00ffffff"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/cancel_button"
        android:layout_marginEnd="54dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/edit_title"
        android:layout_marginBottom="30dp"
        android:hint="Published Year"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_above="@+id/edit_title"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:hint="Number of Copies" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode = "dropdown"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/cancel_button"
        android:layout_alignEnd="@+id/cancel_button" />

</RelativeLayout>